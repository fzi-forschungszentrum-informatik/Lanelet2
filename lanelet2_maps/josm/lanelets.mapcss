relation >[right] way::relation_right {
    text: eval("-------------- right --------------------");
    text-offset: -15;
}

relation >[right] way::foo {
    color: green;
}

relation >[left] way::foo {
    color: blue;
}

relation >[left] way::relation_left {
    text: eval("-------------- left --------------------");
    text-offset: 15;
}


relation[one_way=no] >[left] way::foo {
    width: 6;
}
relation[one_way=no] >[right] way::foo {
    width: 6;
}

