canvas {
    background-color: #ffffff;
    text-color: #ffffff;
    error-color: #ffffff;
}

way >[index=1] node
{
    symbol-shape: square;
	symbol-stroke-color: green;
	symbol-fill-color: green;
	symbol-stroke-width: 0.05;
}

way >[index=-1] node
{
    symbol-shape: square;
	symbol-stroke-color: green;
	symbol-fill-color: green;
	symbol-stroke-width: 0.05;
}

way {
    font-size: 15;
    text-color: white;
    text-halo-color: black;
    text-halo-radius: 5;
}

relation > way::foo{
    width: 4;
    opacity: 1;
}

relation >[ref_line] way[type=stop] {  
    width: 8; 
    color: red; 
    opacity: 1; 
}

relation >[ref_line] way[type!=stop] {  
    width: 6; 
    color: orange; 
    opacity: 1; 
}

